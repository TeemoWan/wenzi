@import 'nib'

#react-root
  margin: 0;
  overflow-x: hidden;
  padding: 0;
  height: 100%;

.wrapper
  margin: 0;
  overflow-x: hidden;
  padding: 0;
  height: 100%;

.main.container
  margin-top: 56px;
  padding: 0;

.wrapper
  display: flex;
  flex-direction: column;
  height: 100%; /* 1, 3 */

#header,
#footer
  flex: none; /* 2 */

#header.ui.item.menu
  border-bottom: 1px solid rgba(51, 51, 51, 0.15);
  box-shadow: none;
  .item:first-child
    justify-content: flex-start;
  .item:last-child
    justify-content: flex-end;
  .logo
    margin: 0 auto;
    width: 35px;

#header-menu-button
  margin: 0 10px;

#header-user-button,
#header-alarm-button,
#header-add-button
  margin-right: 10px;

#header-user-button
  .ui.avatar.image
    height: 34px;
    width: 34px;

#content
  flex: 1 0 auto; /* 2 */

#home
  padding: 30px 0 50px;

#not-found
  padding: 30px 0 50px;

#fluid-content
  padding: 56px 0 0;
  flex: auto;
  display: block;
  width: 100%;
  height: 100%;

.ui.popup
  box-shadow: none;