@import 'nib'

#react-root
  margin: 0;
  overflow-x: hidden;
  padding: 0;
  height: 100%;

.wrapper
  margin: 0;
  overflow-x: hidden;
  padding: 0;
  height: 100%;

.main.container
  margin-top: 56px;
  padding: 0;

.wrapper
  display: flex;
  flex-direction: column;
  height: 100%; /* 1, 3 */

#header,
#footer
  flex: none; /* 2 */

.ui.menu#header
  background: #FFFFFF;
  border-bottom: 1px solid rgba(51, 51, 51, 0.15);
  box-shadow: none;
  flex-wrap: nowrap;
  justify-content: space-between;
  .item
    display: block;
    flex: auto;
  .item:first-child
    display: flex;
    justify-content: flex-start;
    max-width: 150px;
    flex: none;
  .item:last-child
    display: flex;
    justify-content: flex-end;
    max-width: 250px;
    flex: none;
  .logo
    margin: 0 auto;
    width: 35px;
    img
      width: 35px;
      height: 35px;

#header-menu-button
  margin-right: 0.928571em;

#header-alarm-button,
#header-add-button
  margin-right: 0.928571em;

#header-user-button
  .ui.avatar.image
    margin-right: 0;
    height: 34px;
    width: 34px;

#content
  flex: 1 0 auto; /* 2 */

#home
  padding: 30px 0 50px;

#not-found
  padding: 30px 0 50px;

#fluid-content
  padding: 56px 0 0;
  flex: auto;
  display: block;
  width: 100%;
  height: 100%;

.ui.popup
  box-shadow: none;